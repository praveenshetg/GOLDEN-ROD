

<html>
<body>

	<div class="form-div">
		<H1>Schedule Refresher</H1>
		<hr>
		<form action="" id="sch-form">
			<label for="fname">Subject</label> <input type="text" id="subject"
				name="firstname" placeholder="First Name.."> <label
				for="fname">Description</label>
			<textarea rows="30" cols="50" class="w-100 h-60" id="sc-desc"></textarea>
			<label for="fname">Date/Time</label>
			<div class="ui calendar" id="example1">

				<div class="ui input left icon w-100">
					<i class="calendar icon"></i> <input type="text"
						placeholder="Date/Time" id="sc-date">
				</div>
			</div>
	
	<label for="fname">Group</label>
	<select name="group" multiselect="true">
		<option value="1">Group1</option>
		<option value="2">Group2</option>
		<option value="3">Group3</option>

	</select>
	<label for="fname">Repeat</label>
	<br>
	<div class="radio-grp">
		<div class="radio">
			<input type="radio" name="gender" value="male" checked> Daily
		</div>
		<div class="radio">
			<input type="radio" name="gender" value="female"> Weekly
		</div>
		<div class="radio">
			<input type="radio" name="gender" value="other"> None
		</div>
	</div>
	<input type="submit" value="Submit" id="sc-create-event-btn">
	</form>
	</div>

</body>
<script type="text/javascript">
	$('#sch-form').submit(function(e) {
		e.preventDefault();
	});
	$('#example1').calendar({
		today : true, // show a 'today/now' button at the bottom of the calendar 
		closable : true,
		ampm : true,
		multiMonth : 1,
		formatter : {
			date : function(date, settings) {
				if (!date)
					return '';
				var day = date.getDate() + '';
				if (day.length < 2) {
					day = '0' + day;
				}
				var month = (date.getMonth() + 1) + '';
				if (month.length < 2) {
					month = '0' + month;
				}
				var year = date.getFullYear();
				return day + '/' + month + '/' + year;
			}
		},
		monthFirst : false
	// month before day when parsing/converting date from/to text 
	});
	$("#sc-create-event-btn")
			.click(
					function() {
						$
								.ajax(
										{
											method : "POST",
											url : "http://localhost:9090/papi/schedule/addEvent",
											dataType : "json",
											contentType : "application/json",
											data : '{"subject":"'
													+ $("#sc-subject").val()
													+ '","description":"'
													+ $("#sc-desc").val()
													+ '","period":"'
													+ $("#sc-date").val()
													+ '","scheduleDate":"'
													+ $("#sc-date").val()
													+ '"}'
										// data: {"subject":"'+$("#sc-subject").val()+'","description":"'+$("#sc-desc").val()+'","period":"'+$("#sc-date").val()+'","scheduleDate":"'+$("#sc-date").val()+'"}
										}).done(function(msg) {
									alert("scheduler Saved: " + msg);
								}).error(function(msg) {
									alert("scheduler Error: " + msg);
								});

					});
</script>


</html>
