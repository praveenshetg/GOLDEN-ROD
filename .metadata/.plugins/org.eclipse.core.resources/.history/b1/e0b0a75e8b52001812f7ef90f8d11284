<script type="text/javascript">
$('#user-reg-form').submit(function(e) { 
	e.preventDefault();
});
$("#create-user-btn").click(function(){
	var data = '{"fName":"'
		+ $("#fNamet").val()
		+ '","lName":"'
		+ $("#lName").val()
		+ '","oEmail":"'
		+ $("#oEmail").val()
		+ '","pEmail":"'
		+ $("#pEmail").val()
		+ '","designation":"'
		+ $("#designation").val()
		+ '","gender":"'
		+ $("#sc-date").val()
		+ '","phone":"'
		+ $("#phone").val()
		+ '","organization":"'
		+ $("#organization").val()
		+ '","dob":"'
		+ $("#dob").val()
		+ '","aboutYou":"'
		+ $("#aboutYou").val()
		+ '"}';

	$.ajax({
		  method: "POST",
		  url: projectDetails.url+""+projectDetails.restappname+"/user/addUser/"+$("#group_id").val(),
		  dataType: "json",
		    contentType: "application/json",
		  data: data
		})
		.done(function( msg ) {
			showSnackBar("User Created Successfully !!!")
		}).error(function( msg ) {
			showSnackBar("User save failed !!!")
		});;

});

generateGroupNamesOptions('group_id');

</script>

