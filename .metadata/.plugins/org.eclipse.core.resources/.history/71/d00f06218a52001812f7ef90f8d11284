<script type="text/javascript">
$('#user-reg-form').submit(function(e) { 
	e.preventDefault();
});
$("#create-user-btn").click(function(){
	var data = '{"fName":"'
		+ $("#sc-subject").val()
		+ '","lName":"'
		+ $("#sc-desc").val()
		+ '","oEmail":"'
		+ $("#sc-date").val()
		+ '","pEmail":"'
		+ $("#sc-date").val()
		+ '","designation":"'
		+ $("#sc-desc").val()
		+ '","gender":"'
		+ $("#sc-date").val()
		+ '","phone":"'
		+ $("#sc-date").val()
		+ '","organization":"'
		+ $("#sc-desc").val()
		+ '","dob":"'
		+ $("#sc-date").val()
		+ '","aboutYou":"'
		+ $("#sc-date").val()
		+ '"}';
}
	$.ajax({
		  method: "POST",
		  url: projectDetails.url+""+projectDetails.restappname+"/user/addUser/"+$("#group_id").val(),
		  dataType: "json",
		    contentType: "application/json",
		  data: '{"fName":"'+$("#pw_grp_name").val()+',"
			  +"lName":"'+$("#lName").val()+'"}'
		})
		.done(function( msg ) {
			showSnackBar("User Created Successfully !!!")
		}).error(function( msg ) {
			showSnackBar("User save failed !!!")
		});;

});

generateGroupNamesOptions('group_id');

</script>

